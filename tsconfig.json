{
  "compilerOptions": { 
    "moduleResolution": "node", 
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "dist/"  ,
    "target": "es2015", //defines what sort of code ts generates, es5 because it's what most browsers currently UNDERSTANDS. 
    "sourceMap": false, 
    "removeComments": false,
    "noImplicitAny": false,
    "lib": [
        "es2016",
        "dom",
        "es5"
    ]
  },
  "include": [
    "src/" 
  ]
}